generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  credentials credentials[]
  createdAt DateTime @default(now()) @db.Timestamp(6)
}

model credentials {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  username  String
  password  String
  user      users @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now()) @db.Timestamp(6)

  @@unique([title, userId])
}